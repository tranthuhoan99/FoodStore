<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_ad_stu_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".manager.food.ManagerFoodAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/iv_ad_room_add_exit"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_regular"
                android:text="Update Food"
                android:textColor="?attr/colorControlNormal"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/iv_ad_room_add_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="35dp"
                android:src="@drawable/diet" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_ad_room_add_take_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_photo_camera_24"
                    android:text="   Take Photo   "
                    android:theme="@style/AppTheme.MyButton2" />

                <Button
                    android:id="@+id/btn_ad_room_add_choose_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_insert_photo_24"
                    android:text="Choose Photo"
                    android:theme="@style/AppTheme.MyButton6" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_room_add_name"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_meeting_room_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Food Name"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout

            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_room_add_price"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Price"
                android:inputType="phone"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_room_add_avail"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_library_add_check_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Available"
                android:maxLines="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_room_add_quantity"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_keyboard_double_arrow_right_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Quantity"
                android:maxLines="10" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_ad_room_add_des"
                style="@style/modifiedEditText"
                android:drawableStart="@drawable/ic_baseline_bedroom_parent_24"
                android:drawableTint="?attr/colorControlNormal"
                android:hint="Description"
                android:maxLines="10" />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_ad_room_add_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Save"
                android:theme="@style/AppTheme.MyButton1" />




            <Button
                android:id="@+id/btn_ad_room_add_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="Back"
                android:theme="@style/AppTheme.MyButton3" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

